<?xml version="1.0" encoding="utf-8"?>
<changelogs>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.0.0</version>
		<note>
			<item>Initial release</item>
		</note>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.0.1</version>
		<change>
			<item>Updated API endpoint URL</item>
		</change>
		<fix>
			<item>Fixed uninstall on Joomla! 4.0+ and unsupported PHP versions</item>
		</fix>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.1.1</version>
		<security>
			<item>Added anonymous CORS and SRI hashes for CDNs</item>
		</security>
		<change>
			<item>Declared PHP 8.1 support</item>
		</change>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.2.0</version>
		<change>
			<item>Updated friendly-challenge script to 0.9.1</item>
		</change>
		<fix>
			<item>Non-minified scripts are now loaded when debug and CDN are enabled</item>
			<item>Fixed language detection on some language packs</item>
		</fix>
		<addition>
			<item>Added native Russian and Swedish language support</item>
		</addition>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.3.0</version>
		<change>
			<item>Updated friendly-challenge script to 0.9.4</item>
		</change>
		<addition>
			<item>Added native Turkish language support</item>
		</addition>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.4.0</version>
		<change>
			<item>Updated friendly-challenge script to 0.9.5</item>
			<item>Declared PHP 8.2 support</item>
		</change>
		<addition>
			<item>Added native Greek, Ukrainian, Bulgarian, Czech, Slovak, Norwegian, Finnish, Latvian, Lithuanian, Polish, Estonian, Croatian, Serbian, Slovenian, Hungarian, Romanian language support</item>
		</addition>
	</changelog>
	<changelog>
		<element>friendlycaptcha</element>
		<type>plugin</type>
		<version>1.5.0</version>
		<change>
			<item>EU validation endpoint is now used when selected</item>
			<item>Updated friendly-challenge script to 0.9.6</item>
		</change>
		<addition>
			<item>Added native Chinese (Simplified) language</item>
		</addition>
	</changelog>
